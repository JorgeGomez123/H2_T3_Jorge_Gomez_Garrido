<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.empresa.h2_t3_pr_jorge_gomez.UpdatePlayerFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Editar Jugador"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Dorsal:" GridPane.rowIndex="1"/>
        <TextField fx:id="dorsalField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Nombre:" GridPane.rowIndex="2"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Posición:" GridPane.rowIndex="3"/>
        <TextField fx:id="positionField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Edad:" GridPane.rowIndex="4"/>
        <TextField fx:id="edadField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="País:" GridPane.rowIndex="5"/>
        <TextField fx:id="nacionalidadField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Valor:" GridPane.rowIndex="6"/>
        <TextField fx:id="valorField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Partidos:" GridPane.rowIndex="7"/>
        <TextField fx:id="partidosField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        <Label text="Goles:" GridPane.rowIndex="8"/>
        <TextField fx:id="golesField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        <Label text="Asistencias:" GridPane.rowIndex="9"/>
        <TextField fx:id="asistenciasField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
        <Label text="Minutos:" GridPane.rowIndex="10"/>
        <TextField fx:id="minutosField" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
        <Button text="Guardar" onAction="#updatePlayer" GridPane.columnSpan="2" GridPane.rowIndex="11"/>
        <Button text="Cerrar" onAction="#closeForm" GridPane.columnIndex="2" GridPane.rowIndex="11"/>
    </GridPane>

    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
